<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="780.0" spacing="30.0" stylesheets="@../StyleSheets/Main.css"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.MainController">
    <children>
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome To The Dice Game">
            <font>
                <Font name="Arial Black" size="22.0"/>
            </font>
        </Text>
        <Button fx:id="singleButton" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false"
                onAction="#handleSinglePlayerAction" text="Single Player">
            <font>
                <Font name="Arial Black" size="20.0"/>
            </font>
        </Button>
        <Button fx:id="multiButton" mnemonicParsing="false" onAction="#handleMultiPlayerAction" text="MultiPlayer">
            <font>
                <Font name="Arial Black" size="20.0"/>
            </font>
        </Button>
    </children>
</VBox>
